head
	title app


template(name="main")
	+yield


template(name="voteScreen")
	+location
	+voteSection


template(name="location")
	h2 Location
		with coordinates
			p= lat
			p= lng


template(name="voteSection")
	button.vote-button.vote-up Vote +1
	button.vote-button.vote-down Vote +1

template(name="map")
	h1 Map
	a(href="/") Back
	img(src="http://maps.googleapis.com/maps/api/staticmap?center={{loc.lat}},{{loc.lng}}&zoom=15&size=600x300&maptype=roadmap&markers=color:blue%7C{{loc.lat}},{{loc.lng}}")

